# ===================================
# Backend Environment Variables
# ===================================

# ------ DATABASE ------
# Local MongoDB
MONGO_URI=mongodb://localhost:27017/creatorpulse

# OR MongoDB Atlas (cloud)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/creatorpulse?retryWrites=true&w=majority

# ------ AUTHENTICATION ------
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
COOKIE_SECRET=another-secret-for-session-cookies

# ------ OPENAI (Required for AI Features) ------
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ------ GOOGLE OAUTH (Optional - for social login) ------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret

# FOR LOCAL DEVELOPMENT (localhost)
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback
POST_OAUTH_REDIRECT=http://localhost:5173/dashboard

# FOR PRODUCTION (update with your domain)
# GOOGLE_CALLBACK_URL=https://api.creatorpulse.mehedihridoy.online/auth/google/callback
# POST_OAUTH_REDIRECT=http://localhost:5173/dashboard

# ------ CORS CONFIGURATION ------
# FOR LOCAL DEVELOPMENT
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# FOR PRODUCTION (update with your domain)
# CORS_ORIGINS=http://localhost:5173

# ------ SERVER CONFIGURATION ------
PORT=5000
NODE_ENV=development

# Optional branding
BRAND_NAME=CreatorPulse
